<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/boton"
    tools:context=".Principal">

    <ImageView
        android:id="@+id/iv_logooo"
        android:layout_width="419dp"
        android:layout_height="154dp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/grupo1" />

    <Button
        android:id="@+id/btn_Detalles"
        android:layout_width="171dp"
        android:layout_height="50dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="120dp"
        android:backgroundTint="@color/rosa"
        android:text="Detalles"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_logooo" />

    <Button
        android:id="@+id/btn_Globos"
        android:layout_width="171dp"
        android:layout_height="50dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="120dp"
        android:backgroundTint="@color/rosa"
        android:text="Globos"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Detalles" />

    <Button
        android:id="@+id/btn_Tazas"
        android:layout_width="171dp"
        android:layout_height="50dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="120dp"
        android:backgroundTint="@color/rosa"
        android:text="Tazas"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Regalos" />

    <Button
        android:id="@+id/btn_Regalos"
        android:layout_width="171dp"
        android:layout_height="50dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="120dp"
        android:backgroundTint="@color/rosa"
        android:text="Regalos"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Peluches" />

    <Button
        android:id="@+id/btn_Peluches"
        android:layout_width="171dp"
        android:layout_height="50dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="120dp"
        android:backgroundTint="@color/rosa"
        android:text="Peluches"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Globos" />

</androidx.constraintlayout.widget.ConstraintLayout>